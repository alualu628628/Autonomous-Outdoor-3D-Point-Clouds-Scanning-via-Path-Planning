<?xml version="1.0"?>

<launch>
  <arg name="kinect_enabled" default="$(optenv HUSKY_KINECT_ENABLED false)"/>
  <arg name="laser_enabled" default="$(optenv HUSKY_LASER_ENABLED false)"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find husky_gazebo)/launch/husky_empty_world.launch">
    <arg name="world_name" value="$(find husky_gazebo)/worlds/heightmap_mesh.world"/>
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
  </include>

  <param name="two_d_mode" value="false" />
  <node name="show_mesh" pkg="husky_custom_gazebo" type="show_mesh"/>
</launch>
